---
// src/components/PdfPreview.astro
// 使用浏览器原生PDF渲染 - 快速、简单、可靠
export interface Props {
	pdfUrl: string;
}
const { pdfUrl } = Astro.props;
---

<div class="pdf-container" data-pdf-url={pdfUrl} data-pdf-lazy>
  <div class="pdf-placeholder">
    <div class="placeholder-content">
      <svg class="placeholder-icon" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
        <line x1="16" y1="13" x2="8" y2="13"></line>
        <line x1="16" y1="17" x2="8" y2="17"></line>
        <polyline points="10 9 9 9 8 9"></polyline>
      </svg>
      <div class="placeholder-text">点击加载 PDF</div>
      <button class="load-pdf-button">加载 PDF</button>
    </div>
  </div>
  
  <div class="pdf-controls">
    <button class="close-pdf-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
      <span>收起 PDF</span>
    </button>
    <a href={pdfUrl} target="_blank" rel="noopener noreferrer" class="view-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
      <span>新窗口打开</span>
    </a>
    <a href={pdfUrl} download class="download-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      <span>下载 PDF</span>
    </a>
  </div>
</div>

<style is:global>
  .pdf-container {
    width: 100%;
    margin: 2rem 0;
    border-radius: 12px;
    overflow: hidden;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.02), transparent);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .pdf-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    padding: 3rem;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.02) 0%, rgba(0, 0, 0, 0.01) 100%);
  }

  .pdf-container[data-loaded] .pdf-placeholder {
    display: none;
  }

  .placeholder-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .placeholder-content:hover {
    opacity: 0.9;
  }

  .placeholder-icon {
    color: var(--text-color, #666);
    animation: pulse 2s ease-in-out infinite;
  }

  .placeholder-text {
    font-size: 1rem;
    color: var(--text-color, #666);
    font-weight: 500;
  }

  .load-pdf-button {
    padding: 0.75rem 2rem;
    background: oklch(0.65 0.15 var(--hue));
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px oklch(0.65 0.15 var(--hue) / 0.3);
  }

  .load-pdf-button:hover {
    background: oklch(0.70 0.16 var(--hue));
    transform: translateY(-1px);
    box-shadow: 0 4px 12px oklch(0.65 0.15 var(--hue) / 0.4);
  }

  .load-pdf-button:active {
    transform: translateY(0);
    box-shadow: 0 1px 4px oklch(0.65 0.15 var(--hue) / 0.3);
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .pdf-iframe {
    width: 100%;
    height: 700px;
    border: none;
    display: block;
    background: #525659;
  }

  .pdf-controls {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.02);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .close-pdf-button {
    display: none; /* 默认隐藏 */
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1px solid rgba(0, 0, 0, 0.15);
    background: transparent;
    color: var(--text-color, #666);
  }

  .pdf-container[data-loaded] .close-pdf-button {
    display: inline-flex; /* PDF加载后显示关闭按钮 */
  }

  .close-pdf-button:hover {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.25);
    transform: translateY(-1px);
  }

  .close-pdf-button:active {
    transform: translateY(0);
  }

  .view-button,
  .download-button {
    display: inline-flex !important;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem !important;
    border-radius: 8px !important;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none !important;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none !important;
  }

  .view-button::before,
  .download-button::before {
    display: none !important;
  }

  .view-button {
    background: oklch(0.50 0.10 var(--hue)) !important;
    color: white !important;
    box-shadow: 0 2px 6px oklch(0.50 0.10 var(--hue) / 0.3);
  }

  .view-button:hover {
    background: oklch(0.55 0.12 var(--hue)) !important;
    transform: translateY(-1px);
    box-shadow: 0 4px 10px oklch(0.50 0.10 var(--hue) / 0.4);
  }

  .download-button {
    background: oklch(0.65 0.15 var(--hue)) !important;
    color: white !important;
    box-shadow: 0 2px 6px oklch(0.65 0.15 var(--hue) / 0.3);
  }

  .download-button:hover {
    background: oklch(0.70 0.16 var(--hue)) !important;
    transform: translateY(-1px);
    box-shadow: 0 4px 10px oklch(0.65 0.15 var(--hue) / 0.4);
  }

  .view-button:active,
  .download-button:active {
    transform: translateY(0);
  }

  /* 深色模式支持 */
  @media (prefers-color-scheme: dark) {
    .pdf-container {
      background: linear-gradient(to bottom, rgba(255, 255, 255, 0.03), transparent);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .pdf-placeholder {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0.01) 100%);
    }

    .pdf-controls {
      background: rgba(255, 255, 255, 0.03);
      border-top-color: rgba(255, 255, 255, 0.05);
    }

    .close-pdf-button {
      border-color: rgba(255, 255, 255, 0.15);
      color: var(--text-color, #ccc);
    }

    .close-pdf-button:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.25);
    }
  }

  /* 响应式设计 */
  @media (max-width: 640px) {
    .pdf-iframe {
      height: 500px;
    }

    .pdf-controls {
      flex-direction: column;
      padding: 1rem;
    }

    .close-pdf-button,
    .view-button,
    .download-button {
      width: 100%;
      padding: 0.875rem 1.5rem !important;
    }

    .placeholder-content {
      padding: 1rem;
    }

    .load-pdf-button {
      width: 100%;
      max-width: 250px;
    }
  }
</style>

<script>
  /**
   * PDF懒加载 - 使用iframe原生渲染
   * 优点：快速、不需要额外库、浏览器原生支持
   */
  
  function initPdfLazyLoad() {
    const containers = document.querySelectorAll('[data-pdf-lazy]');
    
    if (!containers.length) return;

    containers.forEach((container: Element) => {
      const loadButton = container.querySelector('.load-pdf-button');
      const closeButton = container.querySelector('.close-pdf-button');
      const pdfUrl = container.getAttribute('data-pdf-url');
      
      if (!pdfUrl) return;

      // 点击按钮加载PDF
      loadButton?.addEventListener('click', () => {
        loadPdf(container as HTMLElement, pdfUrl);
      });

      // 点击关闭按钮收起PDF
      closeButton?.addEventListener('click', () => {
        closePdf(container as HTMLElement);
      });

      // 使用 Intersection Observer 自动加载（滚动到附近时）
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && !entry.target.hasAttribute('data-loaded')) {
            // 注释掉自动加载，改为仅显示按钮
            // 用户需要主动点击才加载，避免一次加载太多PDF
            // loadPdf(entry.target as HTMLElement, pdfUrl);
            // observer.unobserve(entry.target);
          }
        });
      }, {
        rootMargin: '200px',
        threshold: 0
      });

      observer.observe(container);
    });
  }

  function loadPdf(container: HTMLElement, pdfUrl: string) {
    if (container.hasAttribute('data-loaded')) return;
    
    container.setAttribute('data-loaded', 'true');
    
    // 创建iframe加载PDF
    const iframe = document.createElement('iframe');
    iframe.className = 'pdf-iframe';
    iframe.src = pdfUrl;
    iframe.title = 'PDF预览';
    
    // 插入iframe
    const placeholder = container.querySelector('.pdf-placeholder');
    if (placeholder) {
      container.insertBefore(iframe, placeholder);
      // 稍等片刻后隐藏占位符，让iframe有时间加载
      setTimeout(() => {
        (placeholder as HTMLElement).style.display = 'none';
      }, 100);
    } else {
      container.insertBefore(iframe, container.firstChild);
    }
  }

  function closePdf(container: HTMLElement) {
    // 移除加载标记
    container.removeAttribute('data-loaded');
    
    // 移除iframe
    const iframe = container.querySelector('.pdf-iframe');
    if (iframe) {
      iframe.remove();
    }
    
    // 重新显示占位符
    const placeholder = container.querySelector('.pdf-placeholder');
    if (placeholder) {
      (placeholder as HTMLElement).style.display = 'flex';
    }
  }

  // 页面加载和路由切换时初始化
  document.addEventListener('astro:page-load', initPdfLazyLoad);
  initPdfLazyLoad();
</script>
